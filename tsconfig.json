{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "outDir": ".build",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@util/*": ["api/util/*"]
    },

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
  },
  "include": [
    "api",
    "shared",
  ],
}
