{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "outDir": ".build",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,

    "baseUrl": ".",
    "paths": {
      "#util": ["api/util/index"],
      "@util/*": ["api/util/*"],
      "@shared/*": ["shared/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],

    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
  },
  "include": [
    "api",
    "shared",
    "app.ts"
  ]
}
